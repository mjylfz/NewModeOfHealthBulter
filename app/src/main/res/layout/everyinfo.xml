<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="#888888"
            android:text="2016-11-22"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            />
        <ImageView
            android:id="@+id/img_step"
            android:layout_width="20dp"
            android:layout_height="180dp"
            android:background="@drawable/step_line"
            android:layout_toRightOf="@id/tv_day"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="诊断结果:"
            android:layout_toRightOf="@id/img_step"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="胃炎"
            android:layout_toRightOf="@id/tv_result"
            android:layout_marginTop="20dp"/>

        <TextView
            android:textColor="#999999"
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="就诊医院:"
            android:layout_toRightOf="@id/img_step"
            android:layout_below="@id/tv_result"
            android:layout_marginLeft="25dp"
            />

        <TextView
            android:id="@+id/loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="苏州大学附属医院"
            android:layout_toRightOf="@id/tv_result"
            android:layout_below= "@id/result"
            android:textColor="#999999"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/tv_doctor"
            android:textColor="#999999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="就诊医生:"
            android:layout_toRightOf="@id/img_step"
            android:layout_below="@id/tv_location"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/doc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="张丽丽"
            android:layout_toRightOf="@id/tv_location"
            android:layout_below= "@id/loc"
            android:textColor="#999999"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:textColor="#999999"
            android:id="@+id/tv_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="就诊处方"
            android:layout_toRightOf="@id/img_step"
            android:layout_below="@id/tv_doctor"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/med"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:singleLine="true"
            android:text="每天复用舒胃片，注意饮食能吃"
            android:layout_toRightOf="@id/tv_doctor"
            android:layout_below= "@id/doc"
            android:textColor="#999999"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>


</LinearLayout>
